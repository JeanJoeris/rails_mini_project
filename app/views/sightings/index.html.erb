<div class="container well well-sm text-center">
  <h1 class="">
    <u>Animal Sightings</u>
  </h1>
  <h3>There have been <%= @sightings.count %> sightings</h3>
</div>

<div class="container">
  <div class="row">
    <% @sightings.each do |sighting| %>
        <div class="container col col-md-4">
            <h3 class=" well well-sm text-center"><%= link_to sighting.short_sighting_text, sighting %></h3>
        </div>
    <% end %>
  </div>
  <h2 class="text-center well well-sm"><%= link_to "New Sighting", new_sighting_path %></h2>
</div>
