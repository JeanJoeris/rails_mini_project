<h1 class="text-center container well well-sm">Sighting!</h1>

<div class="container">
  <div class="well well-sm row">

      <div class="col col-md-8">
        <p class="lead">
          <%= @sighting.full_sighting_text %>
        </p>
        <br />
        <br />
        <h3><%= link_to "What the heck is that?", @sighting.animal %></h3>
      </div>
      <div class="col col-md-4">
        <% if @sighting.animal.image_path %>
          <div class="animal_image">
            <%= image_tag @sighting.animal.wiki_img_url %>
          </div>
        <% end %>
      </div>
  </div>
</div>

<div class="container well well-md">
  <div class="row">
    <h4 class="text-center col col-md-4"><%= link_to "Back to Sightings", sightings_path %></h4>
    <h4 class="text-center col col-md-4"><%= link_to "Edit Sighting", edit_sighting_path %></h4>
    <h4 class="text-center col col-md-4"><%= link_to "Delete Sighting", @sighting, method: :delete %></h4>
  </div>
</div>
